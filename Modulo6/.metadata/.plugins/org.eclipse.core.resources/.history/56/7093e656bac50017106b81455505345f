	<script type="text/javascript">
		function mostrarMenu() {
			var menuTopo = document.getElementById("menuTopo");
			if(menuTopo.className === "menu"){
				menuTopo.className += " responsive"; 
			}else{
				menuTopo.className = "menu";
			}
				
		}
	</script>
